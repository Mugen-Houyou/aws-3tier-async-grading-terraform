# Example terraform.tfvars file for 3-Tier Architecture with Async Grading System
# Copy this file to terraform.tfvars and modify as needed

# Basic Configuration
aws_region       = "ap-northeast-2"
environment_name = "3tier"

# VPC Configuration
vpc_cidr                = "10.0.0.0/16"
public_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs    = ["10.0.3.0/24", "10.0.4.0/24"]
database_subnet_cidrs   = ["10.0.5.0/24", "10.0.6.0/24"]

# Security Configuration
enable_ssh_access     = false
ssh_cidr_blocks       = ["10.0.0.0/8"]  # Only if SSH access is enabled
enable_ecs_alb_access = false           # Enable if ECS tasks need ALB access
enable_ecs_ssh        = false           # Enable SSH for ECS EC2 instances

# Compute Configuration (Web Tier)
instance_type               = "t3.micro"
key_pair_name              = null  # Set to your key pair name if needed
min_size                   = 2
max_size                   = 4
desired_capacity           = 2
enable_deletion_protection = false

# Database Configuration
db_engine                   = "mysql"
db_engine_version          = "8.0.35"
db_instance_class          = "db.t3.micro"
db_allocated_storage       = 20
db_max_allocated_storage   = 100
db_name                    = "webapp"
db_username                = "admin"
db_password                = "your-secure-db-password-here"  # Change this!
db_multi_az                = false
db_backup_retention_period = 7
db_deletion_protection     = false
db_skip_final_snapshot     = true

# S3 Storage Configuration (for grading files)
grading_bucket_suffix       = "files"
enable_s3_versioning       = true
enable_s3_lifecycle        = true
s3_lifecycle_expiration_days = 365
enable_s3_metrics          = true
enable_s3_cors             = false
s3_cors_allowed_origins    = ["*"]

# Amazon MQ Configuration (Message Queue)
mq_engine_type         = "ActiveMQ"
mq_engine_version      = "5.17.6"
mq_instance_type       = "mq.t3.micro"
mq_deployment_mode     = "SINGLE_INSTANCE"
mq_admin_username      = "admin"
mq_admin_password      = "your-secure-mq-password-here"  # Change this!
mq_enable_general_logs = true
mq_enable_audit_logs   = false
mq_log_retention_days  = 7

# ECS Configuration (Grading Workers)
grading_container_image = "nginx:latest"  # Replace with your grading service image
use_fargate            = true
ecs_task_cpu           = "512"
ecs_task_memory        = "1024"
ecs_container_cpu      = 256
ecs_container_memory   = 512
ecs_desired_count      = 2

# ECS Auto Scaling
enable_ecs_autoscaling   = true
ecs_min_capacity        = 1
ecs_max_capacity        = 10
ecs_cpu_target_value    = 70
ecs_memory_target_value = 80

# Grading System Configuration
grading_queue_name        = "grading-requests"
grading_result_queue_name = "grading-results"

# Monitoring Configuration
enable_container_insights = true
enable_ecs_monitoring    = true
